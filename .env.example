# Jira Manager Configuration
# Copy this file to .env and fill in your credentials

# Jira Instance URL (required)
JIRA_URL=https://your-domain.atlassian.net

# Your Jira Email (required)
JIRA_EMAIL=your-email@example.com

# API Token (required) - Get it from: https://id.atlassian.com/manage-profile/security/api-tokens
JIRA_API_TOKEN=your_api_token_here

# Default Project Key (optional)
JIRA_PROJECT_KEY=PROJ

# Default Issue Type (optional)
JIRA_ISSUE_TYPE=Task

# Logging Level (optional): DEBUG, INFO, WARNING, ERROR
JIRA_LOG_LEVEL=INFO
